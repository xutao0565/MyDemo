<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_news_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_news_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello ,I'm news"
        android:layout_toRightOf="@id/iv_news_item_right"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_news_item_small"
        android:layout_below="@+id/tv_news_item"
        android:layout_alignLeft="@+id/tv_news_item"
        android:layout_alignStart="@+id/tv_news_item"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        />
<!--此处还需要加图片，访问数量，日期等-->


</RelativeLayout>